<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:id="@+id/detail_lv">

    </ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/tv_iv_rl"
        android:layout_height="200dp">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/rl_tv_title"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:layout_alignParentBottom="true"
            android:textColor="#fff"
            android:paddingLeft="20dp"
            android:paddingBottom="20dp"
            android:text="剧情"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:src="@mipmap/ic_action_share"
            android:background="#f24d4d"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/rl_tv_title"
            android:id="@+id/rl_iv_share"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_back"
        android:padding="10dp"
        android:id="@+id/detail_iv_back"
        />



</RelativeLayout>