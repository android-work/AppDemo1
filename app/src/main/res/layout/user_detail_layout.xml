<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#d7f2eeee"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#d7f2eeee">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/user_detail_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_back"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="16sp"
            android:text="个人信息"/>
    </LinearLayout>

    <RelativeLayout
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:id="@+id/user_detail_head"
        android:layout_width="match_parent"
        android:background="@drawable/select_detail_bg"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textSize="16dp"
            android:textColor="#000"/>

        <ImageView
            android:id="@+id/head_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_right"/>

        <ImageView
            android:id="@+id/head"
            android:scaleType="fitXY"
            android:layout_toLeftOf="@+id/head_right"
            android:layout_gravity="right"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"/>

    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/select_detail_bg"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:id="@+id/user_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000"
            android:text="昵称"/>

        <ImageView
            android:id="@+id/name_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_right"/>

        <TextView
            android:id="@+id/name"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/name_right"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c3cac7c7"
            android:textSize="16sp"
            android:text="未设置"/>
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/select_detail_bg"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:id="@+id/user_detail_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000"
            android:text="性别"/>

        <ImageView
            android:id="@+id/sex_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_right"/>

        <TextView
            android:id="@+id/sex"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/sex_right"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c3cac7c7"
            android:textSize="16sp"
            android:text="未设置"/>
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/select_detail_bg"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:id="@+id/user_detail_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000"
            android:text="个性签名"/>

        <ImageView
            android:id="@+id/sign_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_right"/>

        <TextView
            android:id="@+id/sign"
            android:layout_toLeftOf="@+id/sign_right"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c3cac7c7"
            android:textSize="16sp"
            android:text="未设置"/>
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/select_detail_bg"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:id="@+id/user_detail_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000"
            android:text="我的地址"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_right"/>
    </RelativeLayout>


</LinearLayout>