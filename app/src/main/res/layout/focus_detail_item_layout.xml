<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.jay.appdemo1.ui.view.CricleImageView
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/focus_detail_item_head"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/find_des_ll"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content">
            <TextView

                android:id="@+id/focus_detail_item_name"
                android:text="LANCE STUDIOS"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:id="@+id/focus_detail_item_des"
                android:textSize="12sp"
                android:text="以工业极致艺术"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/focus_detail_item_btn"
            android:layout_marginRight="20dp"
            android:textColor="#000"
            android:padding="3dp"
            android:background="@drawable/focus_bg"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="已关注"/>
    </LinearLayout>

    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/focus_detail_item_icon"
        android:layout_width="match_parent"
        android:layout_height="250dp">

    </ImageView>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:id="@+id/focus_detail_item_title"
            android:text="LANCE STUDIOS"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:id="@+id/focus_detail_item_category"
            android:textSize="12sp"
            android:text="以工业极致艺术"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2d2c2c"/>
</LinearLayout>