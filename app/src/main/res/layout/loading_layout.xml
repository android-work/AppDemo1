<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_loadbg">

    <EditText
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0dp"
        android:layout_height="0dp" />


    <EditText
        android:layout_centerInParent="true"
        android:id="@+id/user_password"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:textColorHint="#fff"
        android:drawableBottom="@drawable/select_loading_bg"
        android:textColor="#fff"
        android:hint="密码"/>

    <!--<TextView
        android:id="@+id/user_password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码"
        android:textColor="#fff"
       android:layout_marginLeft="10dp"
        android:layout_above="@+id/user_password"/>-->



    <EditText
        android:layout_above="@+id/user_password"
        android:id="@+id/user_name"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:drawableBottom="@drawable/select_loading_bg"
        android:hint="用户名"/>

    <!--<TextView
        android:id="@+id/user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名"
        android:textColor="#fff"
        android:visibility="gone"
        android:layout_marginLeft="30dp"
        android:layout_above="@+id/user_name"/>-->

    <LinearLayout
        android:layout_below="@+id/user_password"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/user_load"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#fff"
            android:text="登录"/>
        <Button
            android:id="@+id/user_reg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#fff"
            android:text="注册"/>
    </LinearLayout>


</RelativeLayout>